<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    tools:context="com.heziz.qixia3.ui.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/padding80"
            android:layout_height="@dimen/padding80"
            android:src="@drawable/login_logo1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding10"
            android:textColor="#ffffff"
            android:textSize="@dimen/text24"
            android:textStyle="bold"
            android:text="@string/app_name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="@dimen/padding30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_username"/>
            <com.heziz.qixia3.view.ClearEditText
                android:id="@+id/etusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding5"
                android:textColorHint="@color/hui"
                android:maxLines="1"
                android:padding="@dimen/padding5"
                android:textColor="@color/white"
                android:background="@null"
                android:textSize="14sp"
                android:hint="请输入账号"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/padding5"
            android:layout_marginBottom="@dimen/padding5"
            android:src="@mipmap/login_xuxian"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding10"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_password"/>
            <com.heziz.qixia3.view.ClearEditText
                android:id="@+id/etpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding5"
                android:padding="@dimen/padding5"
                android:textSize="14sp"
                android:textColorHint="@color/hui"
                android:maxLines="1"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:background="@null"
                android:hint="请输入密码"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/padding5"
            android:layout_marginBottom="@dimen/padding5"
            android:src="@mipmap/login_xuxian"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5">
            <LinearLayout
                android:id="@+id/llSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:button="@drawable/password_checkbox_selector"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding10"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:text="记住密码"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:gravity="right"
                android:text="找回密码"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding5"
            android:text="登录"
            android:textSize="@dimen/text18"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/padding20"
            android:layout_marginRight="@dimen/padding20"
            android:textColor="@color/maincolor1"
            android:background="@drawable/mine_bg_yuanjiao"
            android:layout_marginTop="50dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_alignParentBottom="true"
        android:textSize="8sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="copyright © 2014-2017 HEZIZ  Tech.ALL Right Reserved"/>
</LinearLayout>
