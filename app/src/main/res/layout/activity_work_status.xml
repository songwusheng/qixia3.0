<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/hui"
    tools:context="com.heziz.qixia3.ui.mine.WorkStatusActivity">

    <include layout="@layout/include_title_er"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding10"
    android:textSize="@dimen/text14"
    android:text="快速选择"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bk_bg1"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/padding10"
        android:layout_marginRight="@dimen/padding10">
        <TextView
            android:id="@+id/tvWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding10"
            android:textSize="@dimen/text14"
            android:text="工作中"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding1"
            android:background="@color/hui"/>

        <TextView
            android:id="@+id/tvMetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding10"
            android:textSize="@dimen/text14"
            android:text="会议中"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding1"
            android:background="@color/hui"/>
        <TextView
            android:id="@+id/tvWaic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding10"
            android:textSize="@dimen/text14"
            android:text="外出"/>

    </LinearLayout>


</LinearLayout>
