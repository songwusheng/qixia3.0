<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj"
    android:orientation="vertical"
    tools:context="com.heziz.qixia3.ui.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/padding80"
            android:layout_height="@dimen/padding80"
            android:src="@drawable/login_logo1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding25"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="@dimen/text24"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/padding10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更"
            android:textColor="@color/white"
            android:textSize="@dimen/text16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="准"
            android:textColor="@color/white"
            android:textSize="@dimen/text16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确"
            android:textColor="@color/white"
            android:textSize="@dimen/text16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding20"
            android:text="更"
            android:textColor="@color/white"
            android:textSize="@dimen/text18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="及"
            android:textColor="@color/white"
            android:textSize="@dimen/text16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时"
            android:textColor="@color/white"
            android:textSize="@dimen/text16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding20"
            android:text="更"
            android:textColor="@color/white"
            android:textSize="@dimen/text16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全"
            android:textColor="@color/white"
            android:textSize="@dimen/text16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="面"
            android:textColor="@color/white"
            android:textSize="@dimen/text16" />

        <TextView
            android:id="@+id/mversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding20"
            android:text="当前版本：1.0.1"
            android:textColor="@color/white"
            android:textSize="@dimen/text10" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="copyright © 2014-2017 HEZIZ  Tech.ALL Right Reserved"
        android:textColor="#ffffff"
        android:textSize="8sp" />
</LinearLayout>
