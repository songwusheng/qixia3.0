<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/title_bar_bg" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv"
        android:layout_below="@+id/view"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="@dimen/padding10"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/text14"/>
       <EditText
           android:id="@+id/etPro"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_toLeftOf="@+id/tvCancel"
           android:layout_margin="@dimen/padding10"
           android:hint="请输入项目名称"
           android:textSize="@dimen/text14"
           android:paddingTop="@dimen/padding5"
           android:paddingBottom="@dimen/padding5"
           android:paddingLeft="@dimen/padding10"
           android:drawablePadding="@dimen/padding10"
           android:drawableLeft="@drawable/project_sousuo"
           android:background="@drawable/mine_bg_yuanjiao"/>


    </RelativeLayout>

</RelativeLayout>