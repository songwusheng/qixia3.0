<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.heziz.qixia3.ui.home.HomeTotalListActivity">

    <include layout="@layout/include_title_er"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding5"/>

    <LinearLayout
        android:id="@+id/llList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/maincolor1">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:padding="@dimen/padding5"
                android:gravity="center"
                android:text="序号"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:padding="@dimen/padding5"
                android:gravity="center"
                android:text="项目名"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:padding="@dimen/padding5"
                android:gravity="center"
                android:text="街道"/>
            <TextView
                android:id="@+id/tvLeixing"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:padding="@dimen/padding5"
                android:gravity="center"
                android:text="总投资额\n(亿元)"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:src="@drawable/project_jt"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>
