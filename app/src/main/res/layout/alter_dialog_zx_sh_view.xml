<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mine_bg_yuanjiao"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/padding20">

    <LinearLayout
        android:id="@+id/llDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/padding5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/padding5"
                android:text="描述" />

            <EditText
                android:id="@+id/etDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_bg_yuanjiao_hui"
                android:gravity="top"
                android:hint="请输入不合格描述"
                android:lines="5"
                android:padding="@dimen/padding5"
                android:textSize="@dimen/text14" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding20">

            <Button
                android:id="@+id/btnCancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_biankuang_yuanjiao_maincolor"
                android:minHeight="@dimen/padding10"
                android:padding="@dimen/padding5"
                android:text="取消"
                android:textColor="@color/maincolor" />

            <Button
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding20"
                android:background="@drawable/btn_yj_bg"
                android:minHeight="@dimen/padding10"
                android:padding="@dimen/padding5"
                android:text="确定"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
